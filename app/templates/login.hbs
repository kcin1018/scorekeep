<div class="login">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="card">
                <div class="card-block">
                    <h4 class="text-xs-center">SIGN IN</h4>
                    <hr/>
                    <form {{action 'authenticate' on='submit'}}>
                        <div class="form-group pad-top">
                            <label>Email Address</label>
                            {{input type='email' value=email placeholder="EMAIL" class="form-control"}}
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            {{input type="password" value=password placeholder="PASSWORD" class="form-control"}}
                        </div>
                        <div class="form-group pad-top">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        <div class="form-group text-xs-center">
                            <span class="text-muted">You must be given access to use this resource</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
